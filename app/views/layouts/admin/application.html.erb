<!DOCTYPE html>
<html>

<head>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <title>Diver</title>
</head>

<body>
    <!-- ヘッダー -->
    <div class="header">
                        <% if user_signed_in? %>

                <li class="">
                    <%= link_to 'マイページ', user_path(current_user.id) %>
                </li>
                <li class="">
                    <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
                </li>

                <% else %>

                <li class="">
                    <%= link_to "ユーザー一覧", new_user_registration_path %>
                </li>
                <li class="">
                    <%= link_to "ログアウト", new_user_session_path %>
                </li>

                <% end %>

    </div>

    <%= yield %>

</body>

</html>