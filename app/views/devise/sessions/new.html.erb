<div class="col-md-6 col-sm-offset-3">
    <div class="position">
        <div class="fadein1">
            <div class="title-text">login</div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
                <%= f.label :メールアドレス, class:"header-link" %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
            </div>
            <div class="field">
                <%= f.label :パスワード, class:"header-link" %><br />
                <%= f.password_field :password, autocomplete: "current-password" %>
            </div>
            <% if devise_mapping.rememberable? %>
            <div class="field">
                <%= f.check_box :remember_me %>
                <%= f.label :ログイン状態を保持する, class:"header-link" %>
            </div>
            <% end %>
            <div class="actions">
                <%= f.submit "ログイン", class:"btn btn-lg btn-block btn-base-1 mt-20 btn-sm" %>
            </div>
            <% end %>
            <br>
            <%= render "devise/shared/links" %>
        </div>
    </div>
</div>