<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">
<link rel="stylesheet" href="style.css">
<div class="container">
    <div class="row">
        <div class="col-md-8 col-sm-offset-2">
            <div class="position">
                <div class="fadein1">
                    <%= image_tag 'img/profile.png' %>
                </div>
            </div>
        </div>
    </div>
    <!-- ユーザー画像追加 -->
    <div class="row">
        <div class="fadein1">
            <div class="col-md-8 col-sm-offset-2">
                <%= attachment_image_tag @user, :icon, :fill, 80,80, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%><br>
                <div class="profile-text">
                    ユーザー名：
                    <%= @user.name %><br>
                    自己紹介：
                    <%= @user.self_introduction %><br>
                    <% if @user.id == current_user.id %>
                    メールアドレス：
                    <%= @user.email %>
                </div>
                <%= link_to "プロフィール編集", edit_user_path(@user), class: "pull-right" %>
                <br>
                 <%= link_to "いいね一覧", favorites_path %>
                <% end %>
                <br>
                <% if @user.id == current_user.id %>
                <%= link_to '投稿フォーム', new_post_image_path %>
                <% end %>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-8 col-sm-offset-2">
            <br>
            <!-- カレントユーザーが投稿した画像一覧 -->
            <% @post_images.each do |post_image| %>
            <div class="col-md-4">
                <div class="fadein1">
                    <div class="block-image">
                        <%= link_to post_image_path(post_image.id) do %>
                        <%= attachment_image_tag post_image, :image, :size =>'200x200' %>
                        <% end %>
                    </div>
                    <div class="block-content"></div>
                </div>
            </div>
            <% end %>
        </div>
        <!-- kaminari表示件数 -->
        <%= paginate @post_images, class: "paginate" %>
    </div>
</div>