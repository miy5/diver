<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            <div class="position">
                <div class="fadein1">
                    <div class="title-text">edit plofile</div>
                </div>
                <div class="form-body">
                    <br><br>
                    <%= form_for(@user) do |f| %>
                    <div class="form-group has-icon">
                        <div class="user-edit-image">
                            <%= attachment_image_tag @user, :icon, :fill, 100, 100, class: "img-circle pull-left profile-thumb", fallback: "no_image.jpg"%>
                        </div>
                        <label class="control-label sr-only" for="inputEmail">ProfileImage</label>
                        <%= f.attachment_field :icon, placeholder: "プロフィール画像", class: "user-edit-form" %>
                    </div>
                    <div class="form-group has-icon">
                        <label class="control-label sr-only" for="inputEmail">Name</label>
                        <%= f.text_field :name, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"名前"%>
                        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        <label class="control-label sr-only" for="inputEmail">email</label>
                        <%= f.text_field :email, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"メールアドレス"%>
                        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                        <label class="control-label sr-only" for="inputEmail">自己紹介</label>
                        <%= f.text_field :self_introduction, autofocus: true, class:"form-control", id:"inputEmail", placeholder:"自己紹介"%>
                        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
                    </div>
                    <%= f.submit "変更を保存", class:"btn btn-lg btn-block btn-base-1 mt-20" %>
                    <% end %>
                </div>
                <br>
                <%= link_to "退会", user_path,class:"header-link", method: :delete, "data-confirm" => "本当に退会しますか？" %>
            </div>
        </div>
    </div>
</div>